- provide(:title, "Signup")

.container{:style => "margin-top:90px"}
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %strong Sign in
      .panel-body
        = form_for(:session, url: signin_path) do |f|
          - flash.each do |key, value|
            .alert.alert-danger
              %a.close{"data-dismiss" => "alert", :href => "#"}> Ã—
              = value

          .input-group{:style => "margin-bottom: 12px"}
            %span.input-group-addon
              %i.glyphicon.glyphicon-user
            %input#login-username.form-control{:name => "session[email]", :placeholder => "Email", :type => "text"}/
          .input-group{:style => "margin-bottom: 12px"}
            %span.input-group-addon
              %i.glyphicon.glyphicon-lock
            %input#login-password.form-control{:name => "session[password]", :placeholder => "Password", :type => "password"}/
          .input-group
            .checkbox{:style => "margin-top: 0px;"}
              %label
                %input#login-remember{:name => "session[remember]", :type => "checkbox", :value => "1"}/
                Remember me
          %button.btn.btn-success{:type => "submit"} Sign in
          %hr{:style => "margin-top:10px;margin-bottom:10px;"}/
