%nav.navbar.fixed-top.navbar-expand-lg.navbar-light.bg-light
  %button.navbar-toggler{"aria-controls" => "navbartoggle", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbartoggle", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  %a.navbar-brand.brand-logo{:href => root_path}
    %img.img-thumbnail{src: asset_pack_path("media/images/panda.jpg"), width: "50"}
  #navbartoggle.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto.mt-2.mt-lg-0
      %li.nav-item.active
        %a.nav-link.link-darker{:href => root_path}
          %b Jiazhen Xie
          %span.sr-only (current)

    %form.form-inline.my-2.my-sm-0{:role => "search", :action => search_path, :method => "get"}
      .input-group
        %input.form-control{:placeholder => "Search Posts", :type => "text", :name => "keyword"}/
        .input-group-append
          %button.btn.btn-outline-success{:type => "submit"} Search

    %a.btn.navbar-btn.btn-md.rounded-btn.ml-sm-2.mr-md-2{:href => root_path, :class => current_page?("/") ? "btn-outline-success" : "btn-outline-secondary"} Blog
    %a.btn.navbar-btn.btn-md.rounded-btn.mr-md-2{:href => about_path, :class => current_page?("/about") ? "btn-outline-success" : "btn-outline-secondary"} About
    - if signed_in_admin?
      %a.btn-outline-secondary.btn.navbar-btn.btn-md.rounded-btn.mr-md-2{:href => new_post_path} New post
      %a.btn-outline-secondary.btn.navbar-btn.btn-md.rounded-btn{:href => signout_path, "data-method" => "delete"} Sign out
