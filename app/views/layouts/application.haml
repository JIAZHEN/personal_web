!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title= full_title(yield(:title))
    = stylesheet_pack_tag "application", media: "all"
    = javascript_pack_tag "application"
    = csrf_meta_tags
    = tag.meta name: "stripe-key", content: Pay::Stripe.public_key
    = yield(:head) if content_for?(:head)
    %link{:href => asset_pack_path("media/images/panda.jpg"), :rel => "shortcut icon", :type => "image/x-icon"}/
    %script{:defer => "defer", :src => "https://js.stripe.com/v3/"}
    = render "layouts/shim"

  %body
    = render "layouts/nav" unless controller_name == "sessions".freeze
    = yield
    = render "layouts/footer"
