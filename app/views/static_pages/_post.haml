.row
  / Carousel
  #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
      %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
      %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
    / Wrapper for slides
    .carousel-inner
      - @posts.each_with_index do |post, index|
        .item{class: ("active" if index == 0)}
          %img{:alt => "#{index} slide", :src => post.url}/
          / Static Header
          .header-text.hidden-xs
            .col-md-12.text-center
              %h2
                %span= post.title
              %br/
              %h3
                %span
                  - if post.content.split.size > 15
                    = summarise(post.content)
                    = link_to 'more', posts_path
                  - else
                    = post.content
        / /header-text
  / /carousel