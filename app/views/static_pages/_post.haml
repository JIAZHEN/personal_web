.container
  .row
    .col-lg-12.col-lg-offset-2.col-md-12.col-md-offset-1
      / Carousel
      #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
        / Indicators
        %ol.carousel-indicators
          %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
        / Wrapper for slides
        .carousel-inner
          - @posts.each_with_index do |post, index|
            .item{class: ("active" if index == 0)}
              .post-preview
                %a{:href => post_path(post)}
                  %h2.post-title
                    = post.title
                  %h3.post-subtitle
                    = post.subtitle
                %p.post-meta
                  Posted by
                  %a{:href => "#"} Jiazhen Xie
                  on
                  = post.created_at.to_date.to_formatted_s(:long_ordinal)
                %a.btn.btn-theme.btn-sm.btn-min-block{:href => posts_path} READ MORE
