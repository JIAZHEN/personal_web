- provide(:title, @post.title)

.container
  .row
    #blog-content.col-lg-8
      %h1
        %a{:href => ""}= @post.title
      %hr
        %p
          %i.fa.fa-calendar
          Posted on 
          = @post.created_at.to_formatted_s(:long_ordinal)
        - if user_signed_in?
          %p= link_to raw('<i class="fa fa-pencil"></i> edit'), edit_post_path(@post)

        %hr
          %img.img-responsive{:src => @post.url}
            %hr
              %p= markdown.render(@post.content).html_safe
    = render 'side'