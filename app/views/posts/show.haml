- provide(:title, @post.title)
= stylesheet_link_tag "github-markdown"

%section#post-body
  .container
    .row
      .col-md-10.col-md-offset-2
        .post-avatar
          %img.img-circle{:src => image_path("profile.jpg"), :width => "36", :height => "36"}

        .post-summary
          %a.link.link-accent Jiazhen Xie
          in
          %a.link.link-accent UK
          %span.post-meta.dim-text
            = time_ago_in_words(@post.created_at)
            ago
            - if signed_in_admin?
              %span.middotDivider
              %a.link.link-accent{:href => edit_post_path(@post)}
                %i.fa.fa-pencil-square-o
                Edit

    .row
      .col-md-8.col-md-offset-2.col-sm-12
        %h1.post-title.grey-header= @post.title

    .row
      .col-md-8.col-md-offset-2.col-sm-12
        %article.markdown-body
          = markdown.render(@post.content).html_safe
