.container
  .row
    .col-md-6.col-md-offset-3
      .well.well-sm
        = form_for(@post, :html => {:class => "form-area form-horizontal"}) do |f|
          %fieldset
            = render "shared/error_messages", object: f.object

            .form-group
              %label.col-md-3.control-label{:for => "title"} title
              .col-md-9
                %input#title.form-control{:name => "post[title]", :placeholder => "Title", :type => "text", :value => @post.title}/

            .form-group
              %label.col-md-3.control-label{:for => "subtitle"} Summary
              .col-md-9
                %input#subtitle.form-control{:name => "post[subtitle]", :placeholder => "Summary", :type => "text", :value => @post.subtitle}/

            .form-group
              %label.col-md-3.control-label{:for => "avatar_url"} AvatarURL
              .col-md-9
                %input#avatar_url.form-control{:name => "post[avatar_url]", :placeholder => "AvatarURL", :type => "text", :value => @post.avatar_url}/

            .form-group
              %label.col-md-3.control-label{:for => "content"} Content
              .col-md-9
                %textarea#content.form-control{:name => "post[content]", :placeholder => "Content", :rows => "20"}= @post.content

            .form-group
              .col-md-12.text-right
                %button.btn.btn-primary.btn-lg{:type => "submit"}= btn_name
